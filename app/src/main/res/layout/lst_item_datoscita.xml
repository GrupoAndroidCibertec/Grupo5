<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Odontologia" />

        <TextView
            android:id="@+id/tvNombreDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de doctor" />

        <TextView
            android:id="@+id/tvFechaCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18-07-2015" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvEstadoCita"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="PROGRAMADO"
            android:textStyle="bold"/>


    </RelativeLayout>


</LinearLayout>